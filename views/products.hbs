<!--   Big container   -->
<h6 class="text-success">{{flashmessage}}</h6><h6 class="text-danger">{{flasherror}}</h6>
<div> <a href="{{newproductpagelink}}" class="btn-success btn">Add New Product</a></div>

<div class="card">
    <div class="row">
    <div class="card-header" data-background-color="purple">
                    <h4 class="title">{{title}}</h4>
                     
                </div>
        <div class="col-sm-12">
            <!--      Wizard container        -->
            {{#if results}}
                <table class="table responsive">
                    <tr><th>Name</th><th>SKU</th><th>MRP</th><th>Display</th><th>Main</th><th>Action</th></tr>
                {{#each results}}
                   <tr><td>{{productName}}</td><td>{{productSku}}</td><td>{{productPrice}}</td><td>{{#if productDisplay}}Yes{{else}}No{{/if}}</td><td>{{#if productMain}}Yes{{else}}No{{/if}}</td><td><a href="{{@root.updateproduct}}?productid={{productId}}" class=" text-success">Update</a><a href="#"  data-toggle="modal" data-id={{productId}} data-target="#myModal" onclick="showdeletepopupproduct(this)"  class="deleteproduct text-danger pull-right">Delete</a></td></tr>
                {{/each}}
                </table>
            {{else}}
                <div class="col-lg-12">
                    <h3>No product found.</h3>
                </div>
            {{/if}}
        </div>
    </div>
    <!-- end row -->
</div>
<!--  big container -->
<style>
.modal-backdrop{position:inherit;}
</style>
  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Delete Deal</h4>
        </div>
        <div class="modal-body">
          <p>Are you sure, you want to delete this product?</p>
        </div>
        <div class="modal-footer">
          <a href="" id="deleteproduct" class="btn btn-default">Delete</a>
        </div>
      </div>
    </div>
  </div>
</div>
